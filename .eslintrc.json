{
    "env": {
        "browser": true,
        "es6": true,
        "jest/global": true
    },
    "extends": ["eslint:recommended", "plugin:vue/recommended", "plugin:@typescript-eslint/recommended"],
    "plugins": [
        "@typescript-eslint",
        "vue",
        "jest"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}